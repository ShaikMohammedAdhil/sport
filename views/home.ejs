  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <p>Contact Us: <a href="mailto:info@sportsscheduler.com">info@sportsscheduler.com</a></p>
      <p>&copy; 2024 SportsScheduler. All Rights Reserved.</p>
      <div class="social-links">
        <a href="#">Facebook</a>
        <a href="#">Twitter</a>
        <a href="#">Instagram</a>
      </div>
    </div>
  </footer>

</body>
</html>
